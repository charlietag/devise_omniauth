<p id="notice"><%= notice %></p>

<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Column</th>
      <th>Value</th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td>Title</td>
        <td><%= @article.title %></td>
      </tr>
      <tr>
        <td>Content</td>
        <td><%= @article.content %></td>
      </tr>
      <tr>
        <td>User</td>
        <td><%= @article.user.email %></td>
      </tr>
      <tr>
        <td>Slug</td>
        <td><%= @article.slug %></td>
      </tr>
  </tbody>
</table>
This article has <%= pluralize(@article.comments.count, "Comment") %>
<hr>
<%= render @article.comments %>
<% if can? :create, @article.comments %>
  <%= render 'comments/form', article: @article %>
<% end %>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path(page: flash[:page_num]) %>
